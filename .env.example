# AI CMS Configuration
# Copy this file to .env and customize for your site

# Site Information
VITE_SITE_NAME="AI CMS"
VITE_SITE_URL="https://your-domain.com"
VITE_SITE_DESCRIPTION="An AI-First Content Management System for modern websites"

# Contact Information (optional)
VITE_CONTACT_EMAIL="hello@your-domain.com"
VITE_SOCIAL_TWITTER="@yourusername"
VITE_SOCIAL_GITHUB="https://github.com/yourusername"

# Analytics (optional)
VITE_GA_TRACKING_ID=""
VITE_PLAUSIBLE_DOMAIN=""

# Feature Flags
VITE_ENABLE_SEARCH="true"
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_COMMENTS="false"

# Call-to-Action Configurations
# Blog Post CTA (appears after blog posts)
VITE_CTA_BLOG_POST_HEADING="Ready to Build Your Own CMS?"
VITE_CTA_BLOG_POST_SUBHEADING="Start creating amazing content with AI CMS. Clone the repository and get started in minutes."
VITE_CTA_BLOG_POST_BUTTON_TEXT="Get Started"
VITE_CTA_BLOG_POST_BUTTON_URL="https://github.com/jagbanana/ai_cms"
VITE_CTA_BLOG_POST_ENABLED="true"

# Footer Primary CTA
VITE_CTA_FOOTER_PRIMARY_HEADING="Start Your Content Journey"
VITE_CTA_FOOTER_PRIMARY_SUBHEADING="Download AI CMS and begin creating professional content today"
VITE_CTA_FOOTER_PRIMARY_BUTTON_TEXT="Download Now"
VITE_CTA_FOOTER_PRIMARY_BUTTON_URL="https://github.com/jagbanana/ai_cms"
VITE_CTA_FOOTER_PRIMARY_ENABLED="true"

# Footer Secondary CTA
VITE_CTA_FOOTER_SECONDARY_HEADING="Explore the Documentation"
VITE_CTA_FOOTER_SECONDARY_SUBHEADING="Learn how to customize and deploy your AI CMS"
VITE_CTA_FOOTER_SECONDARY_BUTTON_TEXT="View Docs"
VITE_CTA_FOOTER_SECONDARY_BUTTON_URL="/resources/guides/installation-and-setup"
VITE_CTA_FOOTER_SECONDARY_ENABLED="true"

# Home Hero CTA (if needed)
VITE_CTA_HOME_HERO_HEADING="Try AI CMS Today"
VITE_CTA_HOME_HERO_SUBHEADING="Join thousands of developers building modern content experiences"
VITE_CTA_HOME_HERO_BUTTON_TEXT="Get Started Free"
VITE_CTA_HOME_HERO_BUTTON_URL="https://github.com/jagbanana/ai_cms"
VITE_CTA_HOME_HERO_ENABLED="true"

# Advanced Configuration
# Set any CTA to ENABLED="false" to hide it completely
# URLs starting with "http" will open in new tab
# URLs starting with "/" will navigate within the site